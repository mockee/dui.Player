<?xml version="1.0"?>
<project basedir="." default="build">

    <taskdef name="jscomp" classname="com.google.javascript.jscomp.ant.CompileTask" classpath="build/compiler.jar"/>

    <target name="build" depends="combineJs">
    </target>

    <target name="combineJs">
        <jscomp compilationLevel="advanced" warning="quiet" debug="false" output="js/audio.min.js">
            <sources dir="js">
                <file name="audio.js" />
            </sources>
        </jscomp>
        <jscomp compilationLevel="advanced" warning="quiet" debug="false" output="js/player.min.js">
            <sources dir="js">
                <file name="player.js" />
            </sources>
        </jscomp>
    </target>

</project>
